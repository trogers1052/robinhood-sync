# Robinhood Sync Service Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Robinhood Credentials (REQUIRED)
# ===========================================
ROBINHOOD_USERNAME=your_email@example.com
ROBINHOOD_PASSWORD=your_password

# TOTP Secret for 2FA (OPTIONAL)
# If you have 2FA enabled, provide the TOTP secret for automated login
# You can get this from your authenticator app setup
# ROBINHOOD_TOTP_SECRET=your_totp_secret

# ===========================================
# Kafka/Redpanda Configuration
# ===========================================
KAFKA_BROKERS=localhost:19092
KAFKA_TOPIC=trading.orders

# ===========================================
# Database Configuration
# ===========================================
# Used to track which orders have already been synced
DB_HOST=localhost
DB_PORT=5432
DB_USER=trader
DB_PASSWORD=trader5
DB_NAME=trading_platform

# ===========================================
# Sync Configuration
# ===========================================
# How often to poll for new orders (in seconds)
POLL_INTERVAL_SECONDS=300

# How many days of history to sync on first run
SYNC_HISTORY_DAYS=30
